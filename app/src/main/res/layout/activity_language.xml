<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/dimen_20dp"
    android:background="@color/color_them"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"


        >
        <LinearLayout
            android:id="@+id/tv_lang_msg_arabic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            >

            <ImageView
                android:id="@+id/ivSplashLogo"
                android:layout_width="@dimen/dimen_160dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ogo_splash_logo"
                android:padding="@dimen/dimen_5dp"


                />

            <TextView
                android:id="@+id/tv_lang_msg_arabic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/avenir_next_condensed_bold"
                android:gravity="center"
                android:text="@string/language_ar_msg"

                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"

                />
        </LinearLayout>



        <!-- android:background="@drawable/round_border_lang" -->
    <LinearLayout
        android:id="@+id/lang_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp"
        android:layout_below="@+id/tv_lang_msg_arabic_layout"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="1"

            >

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"

                >

                <LinearLayout
                    android:id="@+id/tv_eng_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_ripple_effect"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/tv_eng"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/avenir_next_condensed_bold"
                        android:gravity="center"
                        android:text="@string/language_en"

                        android:textAlignment="gravity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_them"

                        />


                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_weight="1"


            >

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"

                >

                <LinearLayout
                    android:id="@+id/tv_ar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_ripple_effect"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/tv_ar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/avenir_next_condensed_bold"
                        android:gravity="center"
                        android:text="@string/language_ar"

                        android:textAlignment="gravity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_them"

                        />


                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_lang_msg_english_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/lang_layout"
            android:layout_margin="@dimen/dimen_10dp"


            >
            <TextView
                android:id="@+id/tv_lang_msg_english"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/avenir_next_condensed_bold"
                android:gravity="center"
                android:text="@string/language_en_msg"

                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"



                />
        </LinearLayout>



    </RelativeLayout>
</RelativeLayout>
